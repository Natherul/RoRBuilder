{
  "name": "ror-career-builder",
  "version": "1.0.0",
  "description": "Web app for users of computer game Return of Reckoning to build and save career specs",
  "main": "",
  "engines": {
    "node": "8.5.0",
    "npm": "5.5.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "react-scripts build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Natherul/RoRBuilder.git"
  },
  "keywords": [
    "webpack",
    "React",
    "es6",
    "babel",
    "warhammer",
    "Return of Reckoning",
    "Games Workshop",
    "CSS Modules",
    "Redux",
    "React Router"
  ],
  "author": "Matt Richards",
  "license": "MIT",
  "dependencies": {
    "autotrack": "^2.4.1",
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "lodash": "^4.17.11",
    "query-string": "^6.5.0",
    "react": "^16.8.6",
    "react-app-polyfill": "^1.0.1",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react-router-dom": "^5.0.0",
    "react-scripts": "^3.0.1",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-promise": "^0.6.0",
    "serve": "^11.0.1"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.8",
    "@types/google.analytics": "0.0.39",
    "@types/jest": "^24.0.13",
    "@types/lodash": "^4.14.133",
    "@types/node": "^12.0.4",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.9",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "prettier": "^1.17.1",
    "typescript": "^3.4.5"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "import"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".tsx",
            ".jsx"
          ]
        }
      ],
      "@typescript-eslint/array-type": [
        "error",
        "array"
      ],
      "import/no-unresolved": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "react/prop-types": "off"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "eslintIgnore": [
    "public"
  ],
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not ie < 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
